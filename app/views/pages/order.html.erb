<style type="text/css">

.navbar {
position: relative;
min-height: 50px;
margin-bottom: auto;
border: 1px solid transparent;
}

.img-rounded {
border-radius: 100px;
max-width: 500px;
width: auto;
height: 374px;
}

</style>

<%= render 'pages/navbar' %>
<div class="services">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h3>Product Description - see below</h3>
        <p>A super fruit energy drink with natural caffeine and Baobab</p>
        <div class="col-md-4 col-md-offset-2">
          <img src="assets/energy_drink.png" alt="..." class="img-rounded">
        </div>
      </div>

      <div class="col-md-5">
        <h3>Contact Us</h3>
        <div class="panel-body">
          <%= form_for @message, :url => contact_path do |form| %>


              <div class="form-group">
                <%= form.text_field :name, class: "form-control", :placeholder => "Name"%>
              </div>


              <div class="form-group">
                <%= form.text_field :email, class: "form-control", :placeholder => "Email" %>
              </div>

              <div class="form-group">
                <%= form.text_field :subject, class: "form-control", :placeholder => "Subject" %>
              </div>

              <div class="form-group">
                <%= form.text_area :body, class: "form-control", :placeholder => "Message" %>
              </div>


            <div class="form-group">
              <%= form.submit "Send", class: "btn btn-red btn-lg" %>
            </div>
          <% end %>
      </div>

      </div>
    </div>
  </div>
</div>

<footer>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 text-center">
        <ul class="list-inline">
        <!--  <li><i class="fa fa-facebook fa-3x"></i></li> -->
        <li><a href="https://twitter.com/Born_in_Africa"><i class="fa fa-twitter fa-3x"></i></a></li>
        </ul>
        <div class="top-scroll">
          <a href="#top"><i class="fa fa-circle-arrow-up scroll fa-4x"></i></a>
        </div>
        <hr>
        <p>&copy; Copyright 2014 Born in Africa Superfruit Energy Drink. All rights reserved.</p>
      </div>
    </div>
  </div>
</footer>


